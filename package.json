{
  "name": "modern-todo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "_lint": "eslint --config ./.eslintrc.json --ext js --ext jsx --ext tsx --ext ts",
    "lint-js": "npm run _lint -- ./src/",
    "lint-js:fix": "npm run _lint -- --fix ./src/",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,md,json}' --config ./.prettierrc",
    "prepare": "husky install",
    "lint-css": "stylelint src/**/*.css",
    "lint-css:fix": "stylelint src/**/*.css --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-rational-order-fix": "^0.1.9",
    "stylelint-order": "^6.0.1",
    "stylelint-prettier": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-unused-vars": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/*.js?(x)"
        ],
        "rules": {
          "max-len": "warn"
        }
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "eslint --config ./.eslintrc.json --ext js --ext ts --ext jsx --ext tsx --fix"
    ],
    "*.js": "eslint --cache --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint --config ./.eslintrc.json --ext js --ext ts --ext jsx --ext tsx --fixпше"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Linomadim/Modern-Todo.git"
  },
  "bugs": {
    "url": "https://github.com/Linomadim/Modern-Todo/issues"
  },
  "homepage": "https://github.com/Linomadim/Modern-Todo#readme",
  "description": "",
  "dependencies": {
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0"
  }
}